<h1>User Profile</h1>

<% if @user.list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% else %>
  <div class="row">
    <div class="col-md-8 no-padding">
    <%= @user.list %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= @user.list %>
          </h4>
        </div>
      </div>
    </div>
  </div>
<% end %>
