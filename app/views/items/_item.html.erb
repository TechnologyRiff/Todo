<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>

  <div class="media-body">
    <small>     
        <%= link_to " ", [@list, item], method: :delete, class: 'glyphicon glyphicon-ok' %>
        <%= item.name %> <%= pluralize(item.days_left, 'day') %> left
     </small>
   </div>
<% end %>


