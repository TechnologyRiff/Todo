<%= form_for [@list, @list.tasks.new] do |t| %>
  <%= t.label :Task %>
  <%= t.text_area :title, class: 'form-control', placeholder: "Enter task name." %>
  <%= t.label :description %>
  <%= t.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter task description." %>
  <div class="form-group", style="padding:10px 0px 10px 0px">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>