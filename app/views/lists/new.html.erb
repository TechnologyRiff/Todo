<h1>Create your To-do List</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @list do |t| %>
      <div class="form-group">
        <%= t.label :title %>
        <%= t.text_field :title, class: 'form-control', placeholder: "Enter list name" %>
      </div>
      <%= t.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>
</div>