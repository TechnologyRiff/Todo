<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-8">
      <h2>List: <%= @list.title %></h2>
    </div>
    <div clas="col-md-2">
    </div>
  </div>

  <div class="row">   
  <% unless @list.items.nil? %>
    <div class="col-md-3 pull-left col-offset-1">
      <div class='js-items'> 
        <button class="btn btn-danger" type="button">
          Tasks about to expire: <span class="badge"><%= @urgent_items.count %></span>
        </button>
        <br />
        <p>
          <% @urgent_items.each do |item| %>
            <%= render partial: 'items/urgent', locals: { item: item } %>
          <% end %>
        </p><br />
      </div> 
    </div>
  <% end %> 
    <div class="col-md-8 pull-right">                  
      <div class='js-items'> 
        <button class="btn btn-primary" type="button">
          Total Number of Tasks: <span class="badge"><%= @items.count %></span>
        </button>
        <%= render partial: 'items/item', collection: @items %>
      </div>
      <div class='new-item col-md-6 pull-left'>
        <%= render partial: 'items/form', locals: { list: @list } %>
      </div>
    </div> 
  </div>
</div>

<div class="container">
  <div class="row">
    <div class=" col-md-6 pull-left col-md-offset-4">
      <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-success' %>
      <% if policy(@list).destroy? %>
        <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>


