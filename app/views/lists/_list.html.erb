<div class="row">
  <div class="col-md-8">
    <% if @list.present? %>
      <h1><%= @list.title %></h1>
  
          <% if @task.present? %>
              <% @tasks.each do |task| %>
                <div class="media">
                  <div class="media-body">
                    <h4 div class= "media-heading">
                      <%= link_to task.title %> 
                    </h4>
                  </div>
                </div>
              <% end %>
          <% else %> 
                <div class="media">
                  <div class="media-body">
                    <h4 div class="media-heading">
                      <% if policy(Task.new).create? %>
                        <%= link_to "New Task", new_list_task_path(@list), class: 'btn btn-success' %>
                      <% else %>
                        <%= link_to root =%>
                      <% end %>
                    </h4>
                  </div>
                </div>
          <% end %>
    <% else %>
        <div class="col-md-8">
          <% if policy(List.new).create? %>
            <%= link_to "Create List", new_list_path(@list), class: 'btn btn-success' %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
<div class="col-md-4">
    <% if policy(Task.new).create? %>
      <%= link_to "New Task", new_list_task_path(:list_id), class: 'btn btn-success' %>
    <% else %>
      <%= "You need to sign in." %>
    <% end %>
