<div class="container">

  <div class="row">
  <% if @list.items.present? %> 
    <h2>List: <%= @list.title %>
      <% if policy(@list).destroy? %>
        <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-success btn-sm' %>
        <%= link_to "Delete List", @list, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-sm'%>
      <% end %></h2>

      <button class="btn btn-danger" type="button">Tasks about to expire: <%= link_to " ", list_items_path(@list) %>
        <span class="badge"><%= @urgent_items.count %></span>
      </button>
  </div>

  <div class="row">
    <div class="col-md-12 no-padding"> 
      <h3>All Tasks:</h3>
    </div>
  </div>
  <div class="row">
    <div class='js-items'>
      <div class="col-md-4 no-padding">
        <%= render partial: 'items/form', locals: { list: @list } %>
      </div>
      <div class="col-md-8 no-padding">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 no-padding">
        <%= render partial: 'items/item', collection: @items %>
    </div>
  </div>
  
  <% else %>
    <%= link_to "New List", new_list_path, class: 'btn btn-primary' %>
  <% end %> 

</div>