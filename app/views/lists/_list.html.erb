<div class="container">
    <div class="row">
        <div class="col-md-offset-4 col-md-8">
          <h2>List: <%= @list.title %></h2>
        </div>
        <div clas="col-md-2">
          
        </div>
    </div>
</div>
            
            <p>
              <% unless @list.items.nil? %>
                <div class="container">
                  <div class="row">
                    <div class="col-md-3 pull-left col-offset-1">
                      <div class='js-items'> 
                         <button class="btn btn-danger" type="button">
                            Tasks about to expire: <span class="badge"><%= @urgent_items.count %></span>
                        </button>
                        <br />
                        <% @urgent_items.each do |item| %>
                          <%= render partial: 'items/urgent', locals: { item: item } %>
                        <% end %>
                        <br />
                      </div>       
                  <% end %> 
                  </div>

                  <div class="col-md-8 pull-right">                  
                    <div class='js-items'> 
                         <button class="btn btn-primary" type="button">
                            Total Number of Tasks: <span class="badge"><%= @items.count %></span>
                        </button>
