<h1><%= @list %></h1>

<div class="row">
<div class="col-md-8">
  <p class="lead"><%= @list %></p>
  <% @tasks.each do |task| %>
    <div class="media">
      <div class="media-body">
        <h4 div class= "media-heading">
          <%= link_to task.title %> 
        </h4>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-4">
  <% if policy(Task.new).create? %>
    <%= link_to "New Task", new_task_path(@list), class: 'btn btn-success' %>
  <% end %>
  <% if policy(@task).destroy? %>
      <%= link_to "Delete Task", @task, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this task?' } %>
  <% end %>
</div>
</div>
