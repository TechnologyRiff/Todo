<% if @list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% else %>

<div class="row">
<div class="col-md-8", class: 'pull-left'>

<h1><%= @list.title %></h1>
  <h3><%= @list.description %></h3>
  <%= link_to "Edit List", edit_list_path(:list_id), class: 'btn btn-success' %>
  <% if policy(@list).destroy? %>
  <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
   <% end %>
  <% if @task.nil? %>
  <%= link_to "New Task", new_list_task_path(:list_id), class: 'btn btn-success', class: 'pull-right' %>

  <% else %>
  <% @list.tasks.each do |task| %>
    <div class="media">
      <div class="media-body">
        <h4 div class= "media-heading">
          <%= link_to task %> 
        </h4>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
</div>
<div class="col-md-4", class: 'pull-right'>
  <% if policy(Task.new).create? %>
    <%= link_to "New Task", new_list_task_path(:list_id), class: 'btn btn-success' %>
  <% end %>
  
</div>
<% end %>
