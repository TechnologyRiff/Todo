<% if @list.nil? %>
   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
<% else %>

  <div class="row">
    <div class="col-md-8", class: 'pull-left'>
    <h1><%= @list.title %></h1>
    <h3><%= @list.description %></h3>
        <%= link_to "Edit List", edit_list_path(:list_id), class: 'btn btn-success' %>
        <%= render partial: 'items/form', locals: { list: @list } %>
          <%= render partial: 'items/item', collection: @items %>


      <% if policy(@list).destroy? %>
        <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
<% end %>
